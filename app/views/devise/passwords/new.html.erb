<%= render :partial => "header" %>
<div class="container fix-width-container">
  <div class="well" style="width: 100%;margin-top: 150px;height: auto;">
    <h1 class='align-center-text'>Forgot your password?</h1>
    <br>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>

      <div class='row fix-input-filed-center'>
        <div class="col-sm-8 col-xs-12">
          <div class="row">
            <div class="form-group">
              <div class="col-sm-12">
                <%= f.label :email %><br />
                <%= f.text_field :email, autocomplete: "off", class: 'form-control' %>
              </div>
            </div>
          </div><br>
          <div class="container-fluid">
            <div class="row" style="margin-left: 80px;">
              <div class="col-xs-8">
                <div class="form-group">
                  <%= f.submit "Send me reset password instructions", :class=>"btn btn-primary"  %>
                </div>
              </div>
              <div class="col-xs-4">
                <div class="form-group">
                  <a herf="" onclick="newDoc()" class="btn btn-danger" >Cancel</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

<script>
  function newDoc() {
    window.location.assign("<%= root_url%>")
}
</script>
