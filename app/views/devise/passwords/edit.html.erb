
<%= render :partial => "header" %>
<div class="container fix-width-container">
  <div class="well" style="width: 100%;margin-top: 150px;height: auto;">
    <h1 class='align-center-text'>Change your password</h1>
    <br>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <div class='row fix-input-filed-center'>
        <div class="col-sm-8 col-xs-12">
          <div class="row">
            <div class="form-group">
              <div class="col-sm-12">
                <%= f.label :password %><br />
                <%= f.text_field :password, autocomplete: "off", class: 'form-control' %>
              </div>
            </div>
          </div><br>
          <div class="row">
            <div class="form-group">
              <div class="col-sm-12">
                <%= f.label :password_confirmation %><br />
                <%= f.text_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
              </div>
            </div>
          </div><br>
          <div class="container-fluid">
            <div class="row" style="margin-left: 80px;">
              <div class="col-xs-8">
                <div class="form-group">
                  <%= f.submit "Change my password", :class=>"btn btn-primary"  %>
                </div>
              </div>
              <div class="col-xs-4">
                <div class="form-group">
                  <%= link_to "Cancel", root_path, :class=>"btn btn-danger" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

