<%= render :partial => "header" %>
<div class="container">
  <div class="well" style="width: 100%;height: auto;">
    <h2 class='heading-fix'>Upcoming Classes</h2>
    <div>
      <a href="" onclick="newDoc()" class='btn btn-normal create-btn-position fix-margin-btn-buts'>Back</a>
    </div>
    <div class="table-responsive list-view div-documents-list-section fix-position-table table-margin-top">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <!-- <th class="entry-num">Entry Number</th> -->
            <th class="date">Course</th>
            <th class="name">Type</th>
            <th class="document-title" style="padding-right:40px;">Date of commencement</th>
            <th class="action">Action</th>
          </tr>
        </thead>
        <tbody class="table-body-background change-font">
          <% @events.each do |event| %>
            <tr>
              <td><%= event.name %></td>
              <td><%= event.exam_type %></td>
              <td><%= event.date.strftime("%d/%m/%Y") if event.date.present? %></td>
              <td><%= link_to "Apply", new_apply_tution_path(event), class: 'apply_link_style' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<script>
  function newDoc() {
    window.location.assign("<%= root_url%>")
}
</script>
