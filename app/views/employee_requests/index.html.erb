<%= render :partial => "header" %>
<div class="container">
  <div class="well" style="width: 100%;height: auto;margin-top: -15px;">
    <h2 class='heading-fix'> List of Employee Requests</h2>
    <div>
      <a href="<%= admin_path %>" class='btn btn-normal create-btn-position'>Back</a>
    </div>

    <div class="table-responsive list-view div-documents-list-section fix-position-table table-margin-top">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <!-- <th class="entry-num">Entry Number</th> -->
            <th class="date">Name</th>
            <th class="name">Email</th>
            <th class="document-title" style="padding-right:40px;">Telephone</th>
            <th class="status">Qualification</th>
            <th class="action">Action</th>
          </tr>
        </thead>
        <tbody class="table-body-background change-font">
          <% @employee_requests.each do |employee| %>
            <tr>
              <td><%= employee.name %></td>
              <td><%= employee.email %></td>
              <td><%= employee.telephone %></td>
              <td><%= employee.qualification %></td>
              <td><%= link_to 'Delete', employee_request_path(employee), method: :delete, data:{confirm: 'Are you want to delete employee'}, :class=> "text-color-fix" %> | <%= link_to 'Show', employee_request_path(employee), :class=> 'text-color-fix' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
